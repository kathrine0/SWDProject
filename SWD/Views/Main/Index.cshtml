        <br>
        <a onclick="goToFirstStep()" class="btn btn-dark btn-lg">Spróbuj</a>
    </div>
</header>

<section id="firstStep" class="firstStep" style="display: none"></section>
<section id="secondStep" class="secondStep" style="display: none"></section>
<section id="thirdStep" class="thirdStep" style="display: none">
<!-- Services -->
